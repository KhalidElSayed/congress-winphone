<local:TweetListViewModel
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Congress.ViewModels">

    <local:TweetListViewModel.Tweets>
        <local:TweetViewModel
            Username="@username"
            Text="I posted something on Twitter today."
            Date="2 days ago"
            />
        <local:TweetViewModel
            Username="@username"
            Text="I posted something else on Twitter today with a link to http://somethingstore.com."
            Date="2 days ago"
            />
        <local:TweetViewModel
            Username="@username"
            Text="DOWN WITH THE INTERNET"
            Date="2 days ago"
            />
    </local:TweetListViewModel.Tweets>

</local:TweetListViewModel>