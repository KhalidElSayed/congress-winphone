<UserControl x:Class="Congress.Spinner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    >
    <StackPanel Orientation="Vertical" x:Name="LayoutRoot" Background="Transparent" Margin="0,0,0,0" VerticalAlignment="Center">
        <ProgressBar IsIndeterminate="True" VerticalAlignment="Center" />
        <TextBlock x:Name="LoadingText" Text="Loading..." FontSize="22" Foreground="White" TextAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Center" />
    </StackPanel>
</UserControl>
